<!DOCTYPE html>
<html>
  <head>
    <title>InstarClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    

    
  <body>
    <header>
      <h1>InstaClone</h1>
      <div class="btn-group">
        <right>
        <% if logged_in? %>
          <button type="button" class="session btn btn-secondary"><%= link_to "Profile", user_path(current_user.id) %></button>
          <button type="button" class="session btn btn-secondary"><%= link_to "Logout", session_path(current_user.id), method: :delete %></button>
        <% else %>
         <button type="button" class="session btn btn-secondary"><%= link_to "Sign up", users_path %></button>
         <button type="button" class="session btn btn-secondary"><%= link_to "Login", new_session_path %></button>
        <% end %>
        <button type="button" class="session btn btn-secondary"><%= link_to "Pictures", pictures_path %></button>
        </right>
      </div>
    </header>
    <div class="file">
      <div class="errmsg">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
  <footer class="footer">
      <p>songtaekeun</p>
  </footer>
</html>
