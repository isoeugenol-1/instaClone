<center>
  <h1 class="title">Picture 投稿</h1>
  <%= form_with(model: @picture, local: true ,url: choose_new_or_edit ) do |form| %>
    <% if @picture.errors.any? %>
      <div id="error_explanation">
        <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @picture.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
 
    <p class="user_label"><%= form.label :title %></p>
    <p class="user_input"><%= form.text_field :title %></p>

    <p class="user_label"><%= form.label :content %></p>
    <p class="user_input"><%= form.text_field :content %></p>

    <p class="user_label"><%= form.label :image%></p>
    <p class="user_image"><%= form.file_field :image %></p>

    <p class="submit"><%= form.submit %></p>
  <% end %>

  <%= link_to "Picture一覧画面にもどる", pictures_path %>
</center>